<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Crea tu Cotizacion</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
                </div>
                <div class="form-group">
                    <label for="">Electrodomestido</label>
                    <select class="form-control" name="electrodomestico">
                        <option>None</option>
                        <option>Lavadora</option>
                        <option>Secadora</option>
                        <option>Refrigerador</option>
                        <option>Centrifugadora</option>
                        <option>Calefont</option>
                        <option>Bano</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Comuna</label>
                    <select class="form-control" name="comuna">
                        <option>None</option>
                        <option>Lo Prado</option>
                        <option>Pudahuel</option>
                        <option>Penalolen</option>
                        <option>Providencia</option>
                        <option>Maipu</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="number" name="number" class="form-control" placeholder="Numero Telefonico" step="any">
                </div>
                <div class="form-group">
                    <textarea name="direction" class="form-control" placeholder="Direccion"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block" type="submit">Enviar Cotizacion</button>
                </div>
            </form>
        </div>
    </div>
</div>